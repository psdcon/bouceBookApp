<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iamapaulling.paul.bouncebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.iamapaulling.paul.bouncebook.ActivityMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iamapaulling.paul.bouncebook.ActivitySkillsList"
            android:label="All Skills"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iamapaulling.paul.bouncebook.ActivityMain" />
        </activity>
        <activity
            android:name="com.iamapaulling.paul.bouncebook.ActivitySkillDetails"
            android:label="Skill"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iamapaulling.paul.bouncebook.ActivitySkillsList" />
        </activity>

        <activity
            android:name="com.iamapaulling.paul.bouncebook.ActivityTariffCalc"
            android:label="Tariff Calculator"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iamapaulling.paul.bouncebook.ActivityMain" />
        </activity>

        <activity
            android:name="com.iamapaulling.paul.bouncebook.ActivityMyProgress"
            android:label="Tariff Calculator"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iamapaulling.paul.bouncebook.ActivityMain" />
        </activity>

    </application>

</manifest>
